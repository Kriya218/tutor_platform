{{>header}}
{{> messages}}
<div class="container">
  <div class="row justify-content-between">
    <div class="mt-3 col-md-8">
      <div class="d-flex">
        <img src="{{data.user.image}}" class="profile-img" alt="student-photo">
        <div class="flex-column ms-5">
          <h3 class="my-3">{{data.user.tutorInfo.courseName}}</h3>
          <ul>
            <li>{{data.user.name}} 老師</li>
            <li><i class="fa-solid fa-star me-1" style="color: #f4a258;"></i>評分</li>
            </ui>
        </div>
      </div>
    
      <div class="container mt-5 tutor-profile flex-column">
        <h5>自我介紹</h5>
        <p>{{data.user.aboutMe}}</p>
        <h5>教學風格</h5>
        <p>{{data.user.tutorInfo.teachingStyle}}</p>
        <h5>課程內容</h5>
        <p>{{data.user.tutorInfo.introduction}}</p>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="mb-3">
        <form action="/appointments" method="post">
          <label for="courseDuration" class="form-label">可預約時段</label>
          <select class="form-select form-select-sm" name="courseDuration" id="courseDuration" required>
            <option selected>請選擇預約時段</option>
            {{#each availableTime}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>
          <button type="submit" class="btn button mt-3">預約課程</button>
        </form>
        
      </div>
    </div>
  </div>
</div>
