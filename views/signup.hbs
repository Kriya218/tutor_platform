{{> signup-signin-header}}
{{> messages}}
<div class="container col-md-6">
  <h2 class="mt-3 d-flex justify-content-center">Sign Up</h2>
  <div class="mt-3">
    <form action="/signup" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <div class="mb-3">
        <label for="passwordCheck" class="form-label">Password Check</label>
        <input type="password" class="form-control" id="passwordCheck" name="passwordCheck" required>
      </div>
      <button type="submit" class="btn button d-flex mx-auto">Submit</button>
    </form>
  </div>
</div>

<div class="inline-with-text col-md-7">
  或
</div>

<div class="d-flex justify-content-center">
  <form action="/oauth/login/google" method="get">
    <button type="submit" class="btn" style="border-color:#013D5A;">
      <span style="color: #013D5A;"><i class="fa-brands fa-facebook"></i> Google 登入</span>
    </button>
  </form>
</div>